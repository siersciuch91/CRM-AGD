@model IEnumerable<CRM_AGD.Areas.Equipment.Models.MachineModel>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Model)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.machineType)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.manufacturer)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.machineType.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.manufacturer.Name)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.MachineModelId">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.MachineModelId">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.MachineModelId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
