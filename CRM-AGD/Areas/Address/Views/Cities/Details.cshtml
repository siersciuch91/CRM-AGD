@using Microsoft.EntityFrameworkCore;
@model CRM_AGD.Areas.Address.Models.City

@{
  var streets = ViewBag.Streets;
  ViewData["Title"] = "Details";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
  <h4>City</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.Name)
    </dd>
  </dl>
</div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.CityId">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>


<table class="table">
  <thead>
    <tr>
      <th>
        Streets for @Model.Name
      </th>
    </tr>
  </thead>
  <tbody>
    
    @foreach (var item in streets as List<CRM_AGD.Areas.Address.Models.Street>)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.FullNameWithOutCityName)
        </td>
      </tr>
    }
  </tbody>
</table>