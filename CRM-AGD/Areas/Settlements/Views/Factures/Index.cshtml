@model IEnumerable<CRM_AGD.Areas.Settlements.Models.Facture>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SumNetto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SumBrutto)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumNetto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumBrutto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client.EmailAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FactureId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FactureId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FactureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
